<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:weightSum="2"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/to_list_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin = "20dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_format_list_numbered_24"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:text="See Orders List"
            android:textSize="25sp"
            android:layout_gravity="center"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/to_order_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin = "20dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/back_button"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_restaurant_menu_24"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Make An Order"
            android:textSize="25sp"
            android:layout_gravity="center"/>


    </LinearLayout>

</LinearLayout>