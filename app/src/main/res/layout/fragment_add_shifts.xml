<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddShiftsFragment">
    <data>
        <variable
            name="addShiftsFragment"
            type="com.example.pos_admin.AddShiftsFragment" />
        <variable
            name="shiftsViewModel"
            type="com.example.pos_admin.model.ShiftsViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/add_new_shift_text"
            android:text="ADD NEW SHIFT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="70dp"
            android:paddingLeft="100dp"
            android:textSize="50sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <LinearLayout
            android:id="@+id/new_shift_info"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/add_new_shift_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical"
            android:background="@drawable/login_round_corner_drawable"
            android:layout_marginTop="40dp">
            <EditText
                android:id="@+id/name_edttxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:layout_margin="5dp"
                android:hint="Name"
                android:text="@={shiftsViewModel.inputName}"/>
            <TextView
                android:id="@+id/date_pick"
                android:textSize="40sp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose a Date"/>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/shift_pick_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/shift_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose a Shift"
                    android:layout_margin="5dp"
                    android:textSize="40sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toBottomOf="@+id/new_shift_info">

            <Button
                android:id="@+id/back_to_shifts_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> addShiftsFragment.previousFragment()}"
                android:text="Back"
                android:textSize="30sp" />

            <Space
                android:layout_width="250dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/add_new_shift_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{() -> addShiftsFragment.addNewShift()}"
                android:text="Add"
                android:textSize="30sp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>